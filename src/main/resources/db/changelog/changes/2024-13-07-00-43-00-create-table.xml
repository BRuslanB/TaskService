<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-task-table" author="ruslan">
        <createTable tableName="t_task">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="deadline_date_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add index on deadline_date_time -->
        <createIndex tableName="t_task" indexName="idx_deadline_date_time">
            <column name="deadline_date_time"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>